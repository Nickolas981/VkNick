<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:id="@+id/in_message_container">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/sender_avatar"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:visibility="gone"
        tools:layout_gravity="top" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginLeft="5dp"
        android:background="@drawable/rounded_corner_in"
        android:maxWidth="250dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/sender_avatar">

        <TextView
            android:id="@+id/in_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="250dp"
            android:text="asdasdasdasdasdadasdasdfasdfsdfsdfasdfasdfsdfasdadadasdasd"
            android:textColor="@color/vk_black" />
        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:maxWidth="250dp"
            android:maxHeight="300dp"
            android:visibility="gone"
            android:id="@+id/photoList"
            android:orientation="vertical">

        </LinearLayout>

        <!--<ListView-->
            <!--android:id="@+id/photoList"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content">-->



    </LinearLayout>


</RelativeLayout>